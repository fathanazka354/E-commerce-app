{
  // Kotlin Language Server Settings
  "kotlin.languageServer.enabled": true,
  "kotlin.languageServer.transport": "stdio",
  // Java Settings (for Android development)
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.compile.nullAnalysis.mode": "automatic",
  "java.jdt.ls.java.home": "",
  // File associations
  "files.associations": {
    "*.kt": "kotlin",
    "*.kts": "kotlin"
  },
  // Exclude build directories from file watcher
  "files.watcherExclude": {
    "**/.gradle/**": true,
    "**/build/**": true,
    "**/.idea/**": true,
    "**/node_modules/**": true
  },
  // Search exclude patterns
  "search.exclude": {
    "**/build": true,
    "**/.gradle": true,
    "**/.idea": true,
    "**/app/build": true
  },
  // Editor settings for Kotlin
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  // Gradle settings
  "gradle.nestedProjects": true,
  "gradle.autoDetect": "on",
  // Android specific
  "android.sdk.path": "${env:ANDROID_HOME}",
  // Terminal settings
  "terminal.integrated.cwd": "${workspaceFolder}",
  // File encoding
  "files.encoding": "utf8",
  // Kotlin formatting
  "[kotlin]": {
    "editor.defaultFormatter": "fwcd.kotlin",
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  }
}